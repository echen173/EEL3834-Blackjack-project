#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

class Card{
	int number;
	char suit;
	bool picked;

	int getNumber(Card card){
		int x = card.number;
		return x;
	}

	char getSuit(Card card){
		int x = card.suit;
		return x;
	}

	void setPicked(){
		picked = 1;
	}
};

class Deck {
	int remaining;
	Card card[52];

	Deck create(){		//initialize all 52 cards in deck
		Deck deck;
		int k = 0;
		for (int i=1; i<=4; i++){   //card suits c(clubs), d(diamond), h(hearts), s(spades)
			for (int j=1; j<=13; j++){  //card values 1 - 13
				deck.card[k].number = j;
				switch(i){
				case 1:
					deck.card[k].suit = 'c';
					break;
				case 2:
					deck.card[k].suit = 'd';
					break;
				case 3:
					deck.card[k].suit = 'h';
					break;
				case 4:
					deck.card[k].suit = 's';
					break;
				}
				deck.card[k].picked = 0; //initialize all cards to "not picked"
				k++;
			}
		}
		deck.remaining = 52;
		return deck;
	}

	Card hit(Deck deck){
		int index;
		Card x;

		if (deck.remaining != 0){
		do{
		index = rand() % 52;
		}while(deck.card[index].picked);

		deck.card[index].picked = 1;
		deck.remaining--;
		x = deck.card[index];
		}

		return x;
	}
};

class Hand{
	int size;  //max is five
	Card card[5];

	Hand createHand(Deck deck){
		Hand hand;
		hand.card[0] = hit(deck);
		hand.card[1] = hit(deck);
		hand.size = 2;
		return hand;
	}
};

void printCard(Card card){
	if (card.number == 1)
		cout << "A" << card.suit << " ";
	else if (card.number == 11)
		cout << "J" << card.suit << " ";
	else if(card.number == 12)
		cout << "Q" << card.suit << " ";
	else if(card.number == 13)
		cout << "K" << card.suit << " ";
	else
		cout << card.number << card.suit << " ";
}

void printHand(Hand hand){
	cout << "You have: ";
	for (int i = 0; i < hand.size; i++){
		printCard(hand.card[i]);
	}
}

