#include <iostream>
#include <cstdlib>
#include "card.h"
using namespace std;

struct Deck {
	int remaining;
	Card fullDeck[52];
};

void create(Card card[]){		//initialize all 52 cards in deck
	int k = 0;
	for (int i=1; i<=4; i++){   //card suits c(clubs), d(diamond), h(hearts), s(spades)
		for (int j=1; j<=13; j++){  //card values 1 - 13
			card[k].number = j;

			switch(i){
			case 1:
				card[k].suit = 'c';
				break;
			case 2:
				card[k].suit = 'd';
				break;
			case 3:
				card[k].suit = 'h';
				break;
			case 4:
				card[k].suit = 's';
				break;
			}
			k++;
		}
	}
}


int main(){
	Deck deck;
	create(deck.fullDeck);
	for (int i = 0; i < 52; i++){
		cout << deck.fullDeck[i].number << deck.fullDeck[i].suit << " ";
	}
	return 0;
}
