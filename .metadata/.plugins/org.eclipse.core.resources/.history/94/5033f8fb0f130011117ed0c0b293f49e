#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

class Card{
public:
	int number;
	char suit;
	bool picked;

	int getNumber(Card card){
		int x = card.number;
		return x;
	}

	char getSuit(Card card){
		int x = card.suit;
		return x;
	}

	void setPicked(){
		picked = 1;
	}
};

class Deck {
public:
	int remaining;
	Card card[52];

	void create(){		//initialize all 52 cards in deck
		int k = 0;
		for (int i=1; i<=4; i++){   //card suits c(clubs), d(diamond), h(hearts), s(spades)
			for (int j=1; j<=13; j++){  //card values 1 - 13
				card[k].number = j;
				switch(i){
				case 1:
					card[k].suit = 'c';
					break;
				case 2:
					card[k].suit = 'd';
					break;
				case 3:
					card[k].suit = 'h';
					break;
				case 4:
					card[k].suit = 's';
					break;
				}
				card[k].picked = 0; //initialize all cards to "not picked"
				k++;
			}
		}
		remaining = 52;
	}

	Card hit(){
		int index;
		Card x;

		if (remaining != 0){
		do{
		index = rand() % 52;
		}while(card[index].picked);

		card[index].setPicked();
		x = card[index];
		remaining--;
		}
		return x;
	}
};

class Hand{
public:
	int size;  //max is five
	Card card[5];

	Hand createHand(Deck deck){
		Hand hand;
		card[0] = deck.hit();
		card[1] = deck.hit();
		size = 2;
		return hand;
	}
};

void printCard(Card card){
	if (card.number == 1)
		cout << "A" << card.suit << " ";
	else if (card.number == 11)
		cout << "J" << card.suit << " ";
	else if(card.number == 12)
		cout << "Q" << card.suit << " ";
	else if(card.number == 13)
		cout << "K" << card.suit << " ";
	else
		cout << card.number << card.suit << " ";
}

void printHand(Hand hand){
	cout << "You have: ";
	for (int i = 0; i < hand.size; i++){
		printCard(hand.card[i]);
	}
}

