#ifndef PLAYINGCARDS_H_
#define PLAYINGCARDS_H_

class Card{
public:
	int number;
	char suit;
	bool picked;

	int getNumber();
	char getSuit();
	void setPicked();
};

class Deck : public Card{
public:
	int remaining;
	Card card[52];
	Deck(){		//default constructor
		int k = 0;
		for (int i=1; i<=4; i++){   //card suits c(clubs), d(diamond), h(hearts), s(spades)
			for (int j=1; j<=13; j++){  //card values 1 - 13
				card[k].number = j;
				switch(i){
				case 1:
					card[k].suit = 'c';
					break;
				case 2:
					card[k].suit = 'd';
					break;
				case 3:
					card[k].suit = 'h';
					break;
				case 4:
					card[k].suit = 's';
					break;
				}
				card[k].picked = 0; //initialize all cards to "not picked"
				k++;
			}
		}
		remaining = 52;
	}

	Card hit();
};
struct Hand{
	int size;  //max is five
	Card card[5];
};

Hand createHand(Deck deck);
void printCard(Card card);
void printHand(Hand hand);

#endif /* PLAYINGCARDS_H_ */
